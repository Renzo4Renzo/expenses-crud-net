
@model IEnumerable<in_and_out.Models.ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Expense Type List</h2>
       </div>
       <div class="col-6 text-right">
           <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary">Create new Expense Type</a>
       </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Expense</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="60%">@obj.Name</td>
                        <td width="40%">
                            <div>
                                <a asp-controller="ExpenseType" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary">Update</a>
                                <a asp-controller="ExpenseType" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>  
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No expense types created yet.</p>
    }

</div>